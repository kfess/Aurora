{
  "name": "aurora",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prepare": "cd .. && husky frontend/.husky",
    "prettier": "prettier --write . --ignore-path .gitignore",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,html,json,md}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write",
      "sort-package-json"
    ],
    ".eslintrc.js": "prettier --write"
  },
  "dependencies": {
    "@mantine/charts": "^7.11.1",
    "@mantine/core": "^7.11.1",
    "@mantine/dates": "^7.11.1",
    "@mantine/hooks": "^7.11.1",
    "@mantine/modals": "^7.11.1",
    "@mantine/notifications": "^7.11.1",
    "@mantine/spotlight": "^7.11.1",
    "@mantine/tiptap": "^7.11.1",
    "@tabler/icons-react": "^3.9.0",
    "@tanstack/react-query": "^5.50.1",
    "@tiptap/extension-link": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "axios": "^1.7.2",
    "dayjs": "^1.11.11",
    "dexie": "^4.0.7",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "recharts": "2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.50.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.39",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.2",
    "sort-package-json": "^2.10.0",
    "typescript": "^5"
  }
}
